
<%-date = @date || Date.today %>
<%-next_month_link = link_to (date >> 1).strftime("%B %Y"), {date: date >> 1}%>
<%-prev_month_link = link_to (date << 1).strftime("%B %Y"), {date: date << 1}%>
<%= calendar(:year => date.year, :month => date.month, calendar_title: date.strftime("%B %Y"), :next_month_text=>next_month_link, :previous_month_text => prev_month_link) do |d| 

  topphoto = Photo.find_best_by_category(d, @id)

  if topphoto
    link = link_to raw("<div style='background-image: url(#{topphoto.attachment_url(:thumb)}); width:170px; height:170px;'><span>#{topphoto.likes.count}</span></div>"), topphoto
     [link, {}]
  else
    [d.day, {}]
  end

end %>

